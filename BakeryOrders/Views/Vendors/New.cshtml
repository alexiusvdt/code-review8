@{
  Layout = "_Layout";
}

<h1>Add a Vendor</h1>
<h3>Fill out the following form to create a new Vendor:</h3>

<form action="/vendor" method="post">
  <label for="vendorName">Vendor name:</label>
  <input id="vendorName" name="vendorName" type="text">
  <label for="vendorDescription">Vendor description:</label>
  <input id="vendorDescription" name="vendorDescription" type="text">
  <button type="submit">Submit New Vendor</button>

  <p><a href="/">Return home without adding a vendor</a></p>
  <p><a href="/vendors">Return to vendor list without adding a vendor</a></p>
