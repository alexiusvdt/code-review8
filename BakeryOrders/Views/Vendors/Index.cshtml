@{
  Layout = "_Layout";
}

@using BakeryOrders.Models;

<h1>Vendors</h1>

@if (@Model.Count == 0)
{
  <h2>Mon Dieu! You have no vendors!</h2>
} 

@foreach (Vendor vendor in Model)
{
  <h3><a href='/vendors/@vendor.Id'>@vendor.Name</a></h3>
}

<p><a href='/vendors/new'>Add a new vendor</a></p>
<p><a href='/'>Go back home</a></p>