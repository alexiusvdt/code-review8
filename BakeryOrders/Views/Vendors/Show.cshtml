@{
  Layout = "_Layout";
}

@using BakeryOrders.Models;

<h3>Here are all the orders for this vendor:</h3>

<ul>
@foreach (Order order in @Model["orders"])
{
  <li>Title: <a href='vendors/@Model["vendor"].Id/orders/@order.Id'>@order.Title</a></li>
  <li>Details: <a href='/vendors/@Model["vendor"].Id/orders/@order.Id'>@order.Details</a></li>
  <li>Date: <a href='/vendors/@Model["vendor"].Id/orders/@order.Id'>@order.Date</a></li>
  <li>Price ($): <a href='/vendors/@Model["vendor"].Id/orders/@order.Id'>@order.Price</a></li>
  <p>++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++</p>
}
</ul>


<p><a href='/vendors/@Model["vendor"].Id/orders/new'>Add a new order for this vendor</a></p>
<p><a href='/vendors'>Back to vendor list</a></p>
<p><a href='/'>Return to Main Page</a></p>